<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.taitgu.represent.Detailed"
    tools:showIn="@layout/activity_detailed">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:maxWidth="150dp"
        android:maxHeight="150dp"
        android:scaleType="fitCenter"
        android:id="@+id/profilePhoto"
        android:src="@drawable/borock"
        android:layout_alignParentStart="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Representative"
        android:id="@+id/jobPosition"
        android:layout_alignTop="@+id/profilePhoto"
        android:layout_toEndOf="@+id/profilePhoto"
        android:layout_marginStart="28dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Borock Abama"
        android:id="@+id/name"
        android:layout_below="@+id/jobPosition"
        android:layout_alignStart="@+id/jobPosition" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Democratic Party"
        android:id="@+id/party"
        android:layout_below="@+id/name"
        android:layout_alignStart="@+id/name" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="CONTACT"
        android:id="@+id/contact"
        android:layout_marginTop="28dp"
        android:layout_below="@+id/profilePhoto"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="COMMITTEES"
        android:id="@+id/committees"
        android:layout_marginTop="89dp"
        android:layout_below="@+id/contact"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="SPONSORED BILLS"
        android:id="@+id/sponsoredBills"
        android:layout_marginTop="77dp"
        android:layout_below="@+id/committees"
        android:layout_alignParentStart="true" />

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView"
        android:layout_alignTop="@+id/sponsoredBills"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/textView4"
        android:layout_below="@+id/contact"
        android:layout_above="@+id/committees"
        android:layout_toStartOf="@+id/party" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Term End Date: January 3rd, 2019\nEmail: abama@abama.com\nWebsite: abama.com\n@amaba: &quot;Not bad @obama&quot;"
        android:id="@+id/textView5"
        android:layout_below="@+id/textView4"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="- Committee on Being the Best Person You Can Be\n- Committee on Greatness\n- Committee on Committees"
        android:id="@+id/textView6"
        android:layout_below="@+id/committees"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="#1: The OG Bill\n#1049: The Bill for Bill Clinton\n#2037: React to Acts Act\n#3333: We Waant More Puppies Act"
        android:id="@+id/textView7"
        android:layout_below="@+id/sponsoredBills"
        android:layout_alignParentStart="true" />
</RelativeLayout>
